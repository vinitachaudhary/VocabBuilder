{
  "manifest_version": 2,

  "name": "VocabBuilder",
  "description": "This extension helps you in improving your vocabulary over time",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "background.html"
  },
  "options_page": "index.html",

  "permissions": [
    "*://*/*",
    "contextMenus",
    "tabs","unlimitedStorage", "storage"
  ]
}
